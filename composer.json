{
    "name":              "bldr-io/bldr",
    "description":       "Yaml Build System",
    "require":           {
        "symfony/console":              "~2.4",
        "symfony/config":               "~2.4",
        "symfony/dependency-injection": "~2.4",
        "symfony/event-dispatcher":     "~2.4",
        "symfony/process":              "~2.4",
        "symfony/yaml":                 "~2.4",
        "herrera-io/phar-update":       "2.*",
        "bldr-io/bldr-execute":         ">=1.2.1,<2.0.0",
        "bldr-io/bldr-filesystem":      ">=1.1.0,<2.0.0",
        "bldr-io/bldr-git":             ">=1.0.1,<2.0.0"
    },
    "suggest":           {
        "bldr-io/bldr-symfony": "Allows for shorter syntax with symfony commands"
    },
    "require-dev":       {
        "phpunit/phpunit":           "4.0.*",
        "squizlabs/php_codesniffer": "~1.0",
        "mockery/mockery":           "dev-master"
    },
    "license":           "MIT",
    "authors":           [
        {
            "name":  "Aaron Scherer",
            "email": "aequasi@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "autoload":          {
        "psr-4": {
            "Bldr\\": "src/"
        }
    },
    "autoload-dev":      {
        "psr-4": {
            "Bldr\\Test\\": "tests/"
        }
    },
    "config":            {
        "bin-dir": "bin"
    },
    "bin":               [
        "bin/bldr"
    ]
}
