{
    "name":         "bldr-io/bldr",
    "description":  "Simple Build System / Task Runner",
    "require":      {
        "symfony/console":              "~2.4",
        "symfony/config":               "~2.4",
        "symfony/dependency-injection": "~2.4",
        "symfony/event-dispatcher":     "~2.4",
        "symfony/process":              "~2.4",
        "symfony/yaml":                 "~2.4",
        "symfony/filesystem":           "~2.4",
        "zendframework/zend-json":      "2.3.*",
        "kherge/box": "~2.4"
    },
    "suggest":      {
        "bldr-io/bldr-symfony": "Allows for shorter syntax with symfony commands (Not fully tested)"
    },
    "require-dev":  {
        "phpunit/phpunit":           "4.0.*",
        "squizlabs/php_codesniffer": "~1.0",
        "mockery/mockery":           "dev-master",
        "raulfraile/ladybug":        "dev-master@dev"
    },
    "license":      "MIT",
    "authors":      [
        {
            "name":  "Aaron Scherer",
            "email": "aequasi@gmail.com"
        },
        {
            "name": "Luis Cordova",
            "email": "cordoval@gmail.com"
        }
    ],
    "autoload":     {
        "psr-4": {
            "Bldr\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bldr\\Test\\": "tests/"
        }
    },
    "config":       {
        "bin-dir": "bin"
    },
    "bin":          [
        "bin/bldr"
    ]
}
